<UserControl x:Class="XamlPlayground.Page.ToastPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XamlPlayground.Page"
             xmlns:controls="clr-namespace:XamlPlayground.Control"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200 ">
    <Grid>
        <StackPanel x:Name="toastGroup" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Width="100" Height="50" Margin="0,0,24,24" Content="Add" Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
